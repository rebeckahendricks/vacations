<%= form_with url: "/vacation_homes/#{@vacation_home.id}", method: :patch, local: true do |form| %>
  <%= form.label :listing_name %>:
  <%= form.text_field :listing_name, value: @vacation_home.listing_name %><br>

  <%= form.label :location %>:
  <%= form.text_field :location, value: @vacation_home.location %><br>

  <%= form.label :rating %>:
  <%= form.number_field :rating, in: 1.0..5.0, step: 0.1, value: @vacation_home.rating %><br>

  <%= form.label :verified %>:
  <%= form.radio_button :true, "true" %>
  <%= form.label :verified, "It is verified" %>
  <%= form.radio_button :false, "false" %>
  <%= form.label :age_adult, "It is not verified" %><br>

  <%= form.label :guest_capacity %>:
  <%= form.number_field :guest_capacity, in: 1..20, step: 1, value: @vacation_home.guest_capacity %><br><br>

  <%= form.submit 'Update Vacation Home' %>
<% end %>
