<a href="/vacation_homes">View all Vacation Homes</a>
<a href="/bookings">View all Bookings</a>
<h1>Bookings</h1>

<% @bookings.each do |booking| %>

  <h3><a href="/bookings/<%= booking.id %>">Guest Name: <%= booking.guest_surname%>, <%= booking.guest_firstname %></a></h3>
  <div>Dates: <%= booking.checkin %> to <%= booking.checkout %></div>
  <div>Guests: <%= booking.guests %></div>
  <div>Verified: <%= booking.verified %></div>
  <a href="/bookings/<%= booking.id %>/edit">Edit</a><br>
  <%= button_to 'Delete', "/bookings/#{booking.id}", method: :delete %>
<% end %>

<br><br>

<%= link_to "Sort Bookings", :sort_by_guest_surname => "guest_surname" %><br>
<a href="/vacation_homes/<%= @vacation_home.id %>/bookings/new">Create Booking</a>
